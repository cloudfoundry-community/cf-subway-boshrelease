#!/usr/bin/env bash


<%
  port = p("port")
  broker = link("servicebroker")
  protocol = broker.p("protocol", broker.p("ssl_enabled", false) ? "https" : "http")
  username = broker.p("username")
  password = broker.p("password")
-%>
export PORT=<%= port %>
export SUBWAY_USERNAME=<%= username %>
export SUBWAY_PASSWORD=<%= password %>
<% link("servicebroker").instances.each_with_index do |instance, index| -%>
export BACKEND_BROKER_<%= index %>=<%= "#{protocol}://#{username}:#{password}@#{instance.address}:#{port}" %>
<% end -%>
